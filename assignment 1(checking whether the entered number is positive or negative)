#include<stdio.h>
int main()
{
    int numeral;
    printf("enter the numeral:");
    scanf("%d",&numeral);
    if(numeral>0)
    {
        printf("%d is a positive number",numeral);
    }
    else if(numeral<0)
    {
        printf("%d is a negative number",numeral);
    }
    else
    {
        printf("%d is a number in which it is neither positive nor negative",numeral);
    }
}
